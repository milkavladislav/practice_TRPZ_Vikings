<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="pane" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ratings.controllers.RatingGenerationController">
	<padding>
		<Insets bottom="15" top="15" />
	</padding>

	<Label fx:id="documentName" style="-fx-font-size: 18px;"/>
	<Label text="Виберіть дві групи"/>

	<FlowPane fx:id="checkBoxesPane" alignment="CENTER" hgap="0" orientation="vertical" vgap="5" />

	<Button fx:id="button" onAction="#onButtonClick" text="Сформувати рейтинг" disable="true">
		<cursor>
			<Cursor fx:constant="HAND" />
		</cursor>
	</Button>
</VBox>
