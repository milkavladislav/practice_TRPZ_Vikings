			    <ScrollPane fx:id="tableScrollPane" fitToHeight="true" fitToWidth="true">
				    <content>
				    	<GridPane fx:id="tablePane" />
				    </content>
				</ScrollPane>
			</center>
		</BorderPane>
	</center>
	<right>
		<VBox prefWidth="275.0">
			<children>
				<Accordion fx:id="projectsList" prefHeight="1275.0"/>
