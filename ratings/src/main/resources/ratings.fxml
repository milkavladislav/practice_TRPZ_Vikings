						<MenuItem text="Вихід" onAction="#onClickExit"/>
					</items>
				</Menu>
			</menus>
    	</MenuBar>
    </top>
    <center>
    	<BorderPane>
    		<top>
    			<TabPane fx:id="tabPane" prefWidth="200"/>
