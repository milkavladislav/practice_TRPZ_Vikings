<BorderPane fx:id="pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ratings.controllers.Controller">
    <top>
    	<MenuBar>
    		<menus>
            	<Menu text="Файл">
                	<items>
						<!-- <MenuItem text="Новий документ" onAction="#onClickNewDocument"/> -->
